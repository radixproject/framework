{
    "name": "radix/framework",
    "description": "Radix: The app framework",
    "homepage": "http://www.github.com/radixproject/framework",
    "keywords": ["radix", "apps", "microframework", "framework"],
    "type": "library",
    "authors": [
        {
            "name": "Joost Faassen",
            "email": "j.faassen@linkorb.com",
            "role": "Development"
        }
    ],
    "require": {
        "symfony/console": "~2.5",
        "symfony/config": "~2.6",
        "silex/silex": "2.0.*@dev",
        "twig/twig": "1.16.*@dev",
        "symfony/twig-bridge": "~2.4",
        "symfony/security": "~2.3",
        "doctrine/dbal": "~2.5",
        "linkorb/database-manager": "dev-master",
        "doctrine/annotations": "~1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2"
    },
    "autoload": {
        "psr-4": {
            "Radix\\Framework\\": "src/Framework/",
            "Radix\\App\\": "src/App/"
        }
    }
}
